<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <!--  содержимое здесь -->
        <StackPanel Background="#464451">

            <Label Content="Заглавие:" />
            <TextBox Text="{Binding NewTaskTitle}" Width="200" />

            <Label Content="Описание:" />
            <TextBox Text="{Binding NewTaskDescription}" Width="200" />

            <Label Content="Срок выполнения:" />
            <DatePicker SelectedDate="{Binding NewTaskDueDate}" Width="200" />

            <Label Content="Приоритет:" />
            <ComboBox ItemsSource="{Binding AvailablePriorities}" SelectedValue="{Binding NewTaskPriority}" Width="200" />

            <Label Content="Статус:" />
            <ComboBox ItemsSource="{Binding AvailableStatuses}" SelectedValue="{Binding NewTaskStatus}" Width="200" />

            <Label Content="Назначенный пользователь:" />
            <TextBox Text="{Binding NewTaskAssignedUser}" Width="200" />

            <Button Content="Добавить задачу" Command="{Binding AddTaskCommand}" Height="22" RenderTransformOrigin="0.5,0.5" Foreground="#FF0C0C0C" >
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-2.973"/>
                        <RotateTransform/>
                        <TranslateTransform X="-0.571"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <ListBox ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}" DisplayMemberPath="Title" Width="200" Height="100" />

            <Button Content="Обновить задачу" Command="{Binding UpdateTaskCommand}" Foreground="Black" Click="Button_Click" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ListBox для отображения задач -->
                <ListBox x:Name="TasksListBox" ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask, Mode=TwoWay}"
                 DisplayMemberPath="Title" Grid.Row="1" Margin="10" Width="200" HorizontalAlignment="Left"/>

                <!-- Форма для редактирования выбранной задачи -->
                <StackPanel Grid.Row="1" Margin="220 10 10 10">
                    <TextBlock Text="Название:" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedTask.Title, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 10"/>

                    <TextBlock Text="Описание:" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedTask.Description, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 10"/>

                    <CheckBox Content="Выполнено" IsChecked="{Binding SelectedTask.IsCompleted, UpdateSourceTrigger=PropertyChanged}"/>

                    <Button Content="Обновить задачу" Command="{Binding UpdateTaskCommand}" Foreground="Black"  Margin="0 10 0 0" Width="150" HorizontalAlignment="Left"/>
                </StackPanel>
            </Grid>

<Button Content="Удалить задачу" Command="{Binding DeleteTaskCommand}" />
            <Button Content="Загружать задачи" Command="{Binding LoadTasksCommand}" />
            <!-- конец тут -->
        </StackPanel>
    </Grid>
</Window>
